<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/requiredLvlText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/morpheus"
        android:text="@string/requiredLevel"
        android:textColor="@android:color/background_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/requiredLvl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/morpheus"
        android:text="9"
        android:textColor="@android:color/background_light"
        app:layout_constraintStart_toEndOf="@+id/requiredLvlText"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/remainingPointsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/morpheus"
        android:text="@string/remainingPoints"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toStartOf="@+id/remainingPoints"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/remainingPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/morpheus"
        android:text="51"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>